<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

        <EditText
            android:id="@+id/findByArtistInput"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:hint="@string/find_by_artist"
            android:singleLine="true" >
            <requestFocus />
        </EditText>

        <ImageButton
            android:id="@+id/findByArtistButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="findByArtistHandler"
            android:src="@drawable/eye_search_button"
            android:contentDescription="@string/find_music_button_desc"
        	android:layout_toRightOf="@id/findByArtistInput"
        	android:layout_alignTop="@id/findByArtistInput" />
        
        <EditText
            android:id="@+id/findByVenueInput"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:hint="@string/find_by_venue"
            android:singleLine="true"
            android:layout_below="@id/findByArtistInput" >
            <requestFocus />
        </EditText>

        <ImageButton
            android:id="@+id/findByVenueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="findByVenueHandler"
            android:src="@drawable/eye_search_button"
            android:contentDescription="@string/find_music_button_desc"
        	android:layout_alignTop="@id/findByVenueInput"
        	android:layout_toRightOf="@id/findByVenueInput" />

</RelativeLayout>
